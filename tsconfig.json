{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "es6",
    "target": "es2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}